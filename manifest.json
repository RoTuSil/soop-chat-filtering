{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "content_scripts": [
      {
        "matches": ["https://play.sooplive.co.kr/*",
                    "https://vod.sooplive.co.kr/*"],
        "js": ["content.js","html2canvas.min.js"]

      }
    ],

    "background" : {
      "service_worker": "background.js"
    },

    "permissions": ["activeTab", "scripting", "storage", "contextMenus","downloads"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },

    "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["capture.svg"],
      "matches": ["<all_urls>"]
    }
  ]

}